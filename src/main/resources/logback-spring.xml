<configuration>
    <property name="CUSTOM_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%X{trackingId}] %logger{25} - %msg%n"/>
    <property name="DEFAULT_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{25} - %msg%n"/>

    <appender name="CustomConsole" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CUSTOM_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="DefaultConsole" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${DEFAULT_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- App logger (shows trackingId when present) -->
    <logger name="com.trackwize" level="INFO" additivity="false">
        <appender-ref ref="CustomConsole"/>
    </logger>

    <!-- Root logger (for Spring Boot internal logs, etc.) -->
    <root level="INFO">
        <appender-ref ref="DefaultConsole"/>
    </root>
</configuration>
